{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@packages/*": ["Packages/*"],
      "@backend/*": ["Apps/Back-End/*"],
      "@frontend/*": ["Apps/Front-End/*"],
      "@dashboard/*": ["Apps/Dashboard/*"]
    }
    
  },
   "include": ["Apps", "Packages"]
}
